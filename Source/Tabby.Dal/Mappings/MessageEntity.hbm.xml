<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="Tabby.Dal"
                   namespace="Tabby.Dal.Domain">

  <class name="MessageEntity" table="Message">
    <id name="Id">
      <generator class="guid" />
    </id>
    <property name="UserId" not-null="true" />
    <many-to-one name="User" class="UserEntity" column="UserId" unique="true" lazy="false"/>
    <property name="Text" not-null="true" />
    <property name="CreateDate" update="false" insert="false" generated="insert" not-null="true" />
    <bag name="Recipients" inverse="true" table="DeliveredMessage" cascade="all-delete-orphan" lazy="false" >
        <key column="Id"/>
        <many-to-many class="UserEntity" column="RecipientUserId"/>
    </bag>
  </class>
  
</hibernate-mapping>
