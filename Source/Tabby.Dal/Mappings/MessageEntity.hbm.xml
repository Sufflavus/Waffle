<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="Tabby.Dal"
                   namespace="Tabby.Dal.Domain">

  <class name="MessageEntity" table="Message">
    <id name="Id">
      <generator class="guid" />
    </id>
      
    <property name="SenderId" not-null="true" />
    <many-to-one name="Sender" class="UserEntity" insert="false" column="SenderId" unique="true" lazy="false"/>

    <property name="RecipientId" not-null="true" />
    <many-to-one name="Recipient" class="UserEntity" insert="false" column="RecipientId" unique="true" lazy="false"/>
      
    <property name="Text" not-null="true" update="false" />
      
    <property name="CreateDate" update="false" insert="false" generated="insert" not-null="true" />

    <property name="DeliveryDate">
        <column name="DeliveryDate" sql-type="datetime" not-null="false" />
    </property>
  </class>
  
</hibernate-mapping>
